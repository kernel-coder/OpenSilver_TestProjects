<controls:ChildWindow x:Class="Virtuoso.Core.View.PhysicianFaciltyInfoChildWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      Width="400" Height="300"
                      Style="{StaticResource ChildWindowStyle}"
                      Foreground="{StaticResource HighlightBrush}"
                      Title="PhysicianFaciltyInfoChildWindow">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Text_Message" TextWrapping="Wrap" />
        <Button x:Name="OKButton" Click="OKButton_Click"
                Grid.Row="1"
                Width="75"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,5,90,5"
                TabIndex="0"
                Content="OK" />
        <Button x:Name="CancelButton" Click="CancelButton_Click"
                Grid.Row="1"
                Width="75"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,5,10,5"
                TabIndex="0"
                Content="Cancel" />
    </Grid>
</controls:ChildWindow>