<controls:ChildWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      x:Class="Virtuoso.Core.Controls.HelpPopupDialog"
                      Title="Help"
                      Style="{StaticResource ChildWindowStyle}">

    <StackPanel x:Name="LayoutRoot" Orientation="Vertical" HorizontalAlignment="Left">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,0,10,10" MinHeight="100" MaxHeight="500"
                      MinWidth="100" MaxWidth="850">
            <RichTextBlock x:Name="richTemplateContent" Style="{StaticResource CoreRichTextBlockStyle}" />
        </ScrollViewer>

        <Button Content="Close" Click="CloseButton_Click" Height="30" Width="60" HorizontalAlignment="Right"
                VerticalAlignment="Bottom" Margin="2,0,0,0" />

    </StackPanel>

</controls:ChildWindow>