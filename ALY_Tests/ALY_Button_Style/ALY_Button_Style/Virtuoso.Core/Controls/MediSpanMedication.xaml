              Width="17" Data="F1 M279,0 L311,0 S295,33 279,0 z" VerticalAlignment="Top"
              UseLayoutRounding="False" Opacity="0.8">
            <Path.Fill>
                <SolidColorBrush Color="{StaticResource HighlightDarkColor}" />
