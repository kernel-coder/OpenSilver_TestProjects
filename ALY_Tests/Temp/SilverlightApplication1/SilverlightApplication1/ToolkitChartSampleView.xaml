<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ALY_Button_Style"
    x:Class="ALY_Button_Style.ToolkitChartSampleView"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="600">
    <UserControl.Resources>
        <local:SalesInfoCollection x:Key="SalesInfo" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <toolkit:Chart x:Name="chartLine" Height="250" HorizontalAlignment="Center" Width="600">
            <toolkit:LineSeries x:Name="lineSeries" IsSelectionEnabled="True"
                                    Title="Sales Report"
                                    ItemsSource="{StaticResource SalesInfo}"
                                    IndependentValueBinding="{Binding SaleDate}"
                                    DependentValueBinding="{Binding Sales}" />
        </toolkit:Chart>
        <Button Click="ButtonBase_OnClick" Content="Inspect" HorizontalAlignment="Center" VerticalAlignment="Bottom"></Button>
    </Grid>
</UserControl>
