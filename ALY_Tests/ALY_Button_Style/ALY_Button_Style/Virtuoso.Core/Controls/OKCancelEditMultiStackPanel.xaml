<UserControl x:Class="Virtuoso.Core.Controls.OKCancelEditMultiStackPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <StackPanel HorizontalAlignment="Right"
                Margin="0,12,0,8"
                Orientation="Horizontal"
                VerticalAlignment="Center">
        <HyperlinkButton Style="{StaticResource OKHyperlinkButton}"
                         Margin="0,0,20,0"
                         Visibility="{Binding IsEdit, Converter={StaticResource VisibilityConverter}}"
                         Command="{Binding OKMulti_Command}" />
        <HyperlinkButton Style="{StaticResource CancelHyperlinkButton}"
                         Visibility="{Binding IsEdit, Converter={StaticResource VisibilityConverter}}"
                         Command="{Binding CancelMulti_Command}" />
        <HyperlinkButton x:Name="editHyperlinkButton"
                         Style="{StaticResource EditHyperlinkButton}"
                         Visibility="{Binding IsEdit, Converter={StaticResource OppositeVisibilityConverter}}"
                         Command="{Binding EditMulti_Command}" />
    </StackPanel>
</UserControl>