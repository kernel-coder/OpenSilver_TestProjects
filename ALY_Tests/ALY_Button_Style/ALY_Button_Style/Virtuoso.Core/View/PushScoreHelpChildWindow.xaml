            <TextBlock Text="Tissue Type" FontWeight="Bold" Foreground="{StaticResource  PushColorBrush}" />
            <VirtuosoCoreControls:vRichTextArea
                ParagraphText="This refers to the types of tissue that are present in the wound (ulcer) bed.&lt;LineBreak /&gt;Score as a '4' if there is any necrotic tissue present.&lt;LineBreak /&gt;Score as a '3' if there is any amount of slough present and necrotic tissue is absent.&lt;LineBreak /&gt;Score as a '2' if the wound is clean and contains granulation tissue.&lt;LineBreak /&gt;A superficial wound that is reepithelializing is scores as a '1'.&lt;LineBreak /&gt;When the wound is closed, score as a '0'."
                TextWrapping="Wrap" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Text="4 - "
                           Foreground="{StaticResource  PushColorBrush}" FontWeight="Bold" />
                <VirtuosoCoreControls:vRichTextArea Margin="0,1" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2"
                                                    ParagraphText="&lt;Bold&gt;Necrotic Tissue (Eschar): &lt;/Bold&gt; black, brown, or tan tissue that adheres firmly to the wound bed or ulcer edges and may be either firmer or softer than surrounding skin."
                                                    TextWrapping="Wrap" />
                <TextBlock VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Text="3 - "
                           Foreground="{StaticResource  PushColorBrush}" FontWeight="Bold" />
                <VirtuosoCoreControls:vRichTextArea Margin="0,1" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2"
                                                    ParagraphText="&lt;Bold&gt;Slough: &lt;/Bold&gt; yellow or white tissue that adheres to the ulcer bed in strings or thick clumps, or is mucinous,"
                                                    TextWrapping="Wrap" />
                <TextBlock VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Text="2 - "
                           Foreground="{StaticResource  PushColorBrush}" FontWeight="Bold" />
                <VirtuosoCoreControls:vRichTextArea Margin="0,1" VerticalAlignment="Top" Grid.Row="2" Grid.Column="2"
                                                    ParagraphText="&lt;Bold&gt;Granulation Tissue: &lt;/Bold&gt; pink or beefy red tissue with a shiny, moist, granular appearance."
                                                    TextWrapping="Wrap" />
                <TextBlock VerticalAlignment="Top" Grid.Row="3" Grid.Column="1" Text="1 - "
                           Foreground="{StaticResource  PushColorBrush}" FontWeight="Bold" />
                <VirtuosoCoreControls:vRichTextArea Margin="0,1" VerticalAlignment="Top" Grid.Row="3" Grid.Column="2"
                                                    ParagraphText="&lt;Bold&gt;Epithelial Tissue: &lt;/Bold&gt; for superficial ulcers, new pink or shiny tissue (skin) that grows in from the edges or as islands on the ulcer surface."
                                                    TextWrapping="Wrap" />
                <TextBlock VerticalAlignment="Top" Grid.Row="4" Grid.Column="1" Text="0 - "
                           Foreground="{StaticResource  PushColorBrush}" FontWeight="Bold" />
                <VirtuosoCoreControls:vRichTextArea Margin="0,1" VerticalAlignment="Top" Grid.Row="4" Grid.Column="2"
                                                    ParagraphText="&lt;Bold&gt;Closed/Resurfaced&lt;/Bold&gt; the wound is completely covered with epithelium (new skin)."
                                                    TextWrapping="Wrap" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</controls:ChildWindow>