        </Path>
        <Path Stretch="Uniform" HorizontalAlignment="Right" Margin="0,0,0,0" Width="17"
              Data="F1 M279,0 L311,0 L311,4 L279,4 z" VerticalAlignment="Top" UseLayoutRounding="False">
            <Path.Fill>
                <SolidColorBrush Color="#FFFC7C34" />
            </Path.Fill>
        </Path>
