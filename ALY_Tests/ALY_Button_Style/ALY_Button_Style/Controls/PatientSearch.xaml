<UserControl x:Class="Virtuoso.Mammoth.Controls.PatientSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Virtuoso.Mammoth.Controls">
   <Border Padding="25">
      <StackPanel Grid.Row="0" HorizontalAlignment="Center">
         <StackPanel Orientation="Horizontal">
            <TextBlock Text="Last Name" Width="100" />
            <TextBox Text="{Binding LastName, Mode=TwoWay}" TextWrapping="NoWrap" TabIndex="0" Width="175" />
            <Button Content="Clear"
                    Command="{Binding ClearCommand, Mode=TwoWay}"                    
                    TabIndex="2"
                    Margin="10,0,0,0"
                    Width="100" />
         </StackPanel>
         <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="MRN" Width="100" />
            <TextBox Text="{Binding Mrn, Mode=TwoWay}" TextWrapping="NoWrap" TabIndex="1" Width="175" />
            <Button Content="Search"
                    Command="{Binding SearchCommand, Mode=TwoWay}"                    
                    TabIndex="3"
                    Margin="10,0,0,0"
                    Width="100" />
         </StackPanel>
      </StackPanel>
   </Border>
</UserControl>
