<controls:ChildWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      xmlns:local="clr-namespace:Virtuoso.Controls"
                      x:Class="Virtuoso.Controls.SearchDialog"
                      Title="Search"
                      Style="{StaticResource ChildWindowStyle}"
                      Width="940"
                      Height="550">

    <Grid x:Name="LayoutRoot"
          Margin="2">

        <local:SearchPanelUserControl x:Name="searchPanelUserControl"
                                      Grid.Row="0"
                                      SearchClick="OKButton_Click"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      IsTabStop="True"
                                      TabIndex="1"
                                      CurrentSearchOverride="{Binding CurrentSearchOverride, Mode=TwoWay}"
                                      ParentViewModel="{Binding Model}" />
    </Grid>
</controls:ChildWindow>