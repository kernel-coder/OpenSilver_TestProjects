<UserControl x:Class="Virtuoso.Core.Controls.vLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Required" Grid.Row="0" Grid.Column="0" Text="" Style="{StaticResource CoreTextBlockStyle}" />
        <TextBlock x:Name="Label" Grid.Row="0" Grid.Column="1" Text="" TextWrapping="Wrap"
                   Style="{StaticResource CoreTextBlockStyle}" />
    </Grid>
</UserControl>